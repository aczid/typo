/**
 *
 * Controls the main layout (width, height, margin, padding)
 *
 * #container
 *   #header
 *   #page
 *     #content
 *     #sidebar
 *   #footer
 */
body {
	text-align: center;
	margin: 0; padding: 0em; 
	background-color: #000;
	overflow-x: hidden;
}

#container {
	width: 800px;
	text-align: left; 
	margin: 0 auto; padding: 0;
  	background: url(/images/theme/main.png) no-repeat 0px 146px #fff;
}

#header {
	margin: 0; padding: 0;
	margin-top: -2px;
	text-align: left;
}

#page {
}

#content {
	width: 780px;
  text-align: justify;
}

#sidebar {
	width: 200px;
	margin-top: -6em;
}

#footer {
	margin: 0;
	padding: 0;
	clear:both;
	background: #000; /* url(/images/theme/footer.png) no-repeat top center; */
}

#footer table {
	width: 800px;
	text-align: left; 
	margin: 0 auto; padding: 0;
	text-align: justify;
}

/*--------------------------------------------------------------
 Sidebar Alignment: you can have left or right
 --------------------------------------------------------------*/

/* BEGIN: Right Sidebar */
#sidebar {
	float: right;
  text-align: left;
	padding-left: 15px; 
	color: #000;
}
#content {
	float: left;
	padding-left: 5px; 
	color: #000;
}
/* END: Right Sidebar */


/* BEGIN: Left Sidebar
#sidebar {
	float: left; text-align: right;
	padding-right: 20px; 
	border-right: 1px dotted #000; 
}

#content {
	float: right; text-align: left;
}
/* END: Left Sidebar */
